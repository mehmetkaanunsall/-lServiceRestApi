<?xml version="1.0" encoding="utf-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    
    <name>Marwiz</name>
    <application>
        <locale-config>
            <default-locale>tr</default-locale>
            <supported-locale>pl</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>application.auth</base-name>
            <var>auth</var>
        </resource-bundle>  
                   
        <resource-bundle>
            <base-name>application.locale</base-name>
            <var>loc</var>
        </resource-bundle>  
                   
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver> 
          
      <!--  <el-resolver>com.mepsan.centrowiz.general.common.EmptyNullStringResolver</el-resolver> -->
        
    </application> 
    
  

    <component>
        <component-type>org.primefaces.component.SentinelMenu</component-type>
        <component-class>org.primefaces.sentinel.component.menu.SentinelMenu</component-class>
    </component>
    
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.SentinelMenuRenderer</renderer-type>
            <renderer-class>org.primefaces.sentinel.component.menu.SentinelMenuRenderer</renderer-class>
        </renderer>
    </render-kit>
    
     <lifecycle>
        <phase-listener>com.mepsan.marwiz.general.common.SessionTimeoutListener</phase-listener>
    </lifecycle>

    
</faces-config>