    </bean> 

    <bean id="chequeBillPaymentService" class="com.mepsan.marwiz.finance.chequebill.business.ChequeBillPaymentService" lazy-init="true" scope="prototype">
    </bean> 
     
    <bean id="chequeBillPaymentDao" class="com.mepsan.marwiz.finance.chequebill.dao.ChequeBillPaymentDao"  lazy-init="true" scope="request" >
